<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ederchua.tomorrowapp">

    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TomorrowApp.NoActionBar">
        <activity
            android:name="com.ederchua.tomorrowapp.Login"
            android:exported="true"
            android:theme="@style/Theme.TomorrowApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ederchua.tomorrowapp.Home"
            android:exported="true"
            android:theme="@style/Theme.TomorrowApp.NoActionBar" />
        <activity
            android:name="com.ederchua.tomorrowapp.Register"
            android:exported="true"
            android:theme="@style/Theme.TomorrowApp.NoActionBar" />
        <activity
            android:name="com.ederchua.tomorrowapp.AddRecipientActivity"
            android:exported="true"
            android:theme="@style/Theme.TomorrowApp.NoActionBar" />


    </application>

</manifest>